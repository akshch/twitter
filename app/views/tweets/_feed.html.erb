<div class="column is-half">
  <% if current_user.present? %>
	<article class="media box">
		<figure class="media-left">
			<p class="image is-64x64">
				<%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.full_name) %>
			</p>
		</figure>
		<div class="media-content">
			 <%= render 'tweets/form' %>
		</div>
	</article>
  <% end %>

<% if @tweets.present?%>
  <% @tweets.each do | tweet | %>
  <div class="box">
  	<article class="media">
  		<div class="media-left">
  			<figure class="image is-64x64">
  				<%= gravatar_image_tag(tweet.user.email, size: 64, alt: tweet.user.full_name) %>
  			</figure>
  		</div>
  		<div class="media-content">
  			<div class="content">
  				<strong><%= tweet.user.full_name %></strong><br />
  				<small><%= tweet.user.username %></small><br/>
  				<p><%= tweet.content %></p>
  			</div>
        <% if current_user.present? && current_user.id == tweet.user_id %>
  			<nav class="level">
  				<div class="level-left is-mobile">
  					<%= link_to tweet, class: "level-item" do %>
  					  <span class="icon"><i class="fas fa-comment" aria-hidden="true"></i></i></i></span>
  					<% end %>
  					<%= link_to edit_tweet_path(tweet), class: "level-item" do %>
  					  <span class="icon"><i class="fas fa-retweet" aria-hidden="true"></i></span>
  					<% end %>
            <%= link_to edit_tweet_path(tweet), class: "level-item" do %>
  					  <span class="icon"><i class="far fa-heart" aria-hidden="true" ></i></span>
  					<% end %>
  				</div>
  			</nav>
        <% end %>
  		</div>
  	</article>
  </div>
<% end %>
<%else%>
<h2>No Tweeets</h2>
<%end%>
</div>